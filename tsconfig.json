//PROHIBIDO TOCAR ESTE ARCHIVO
// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    // ‚ö° MODO STRICT ACTIVADO
    "strict": true,
    "noImplicitAny": true, // ‚Üê Prohibe any impl√≠cito
    "strictNullChecks": true, // ‚Üê Prohibe null/undefined sin verificar
    "strictFunctionTypes": true, // ‚Üê Tipos estrictos en funciones
    "strictBindCallApply": true, // ‚Üê bind/call/apply tipados
    "strictPropertyInitialization": true, // ‚Üê Propiedades deben inicializarse
    "noImplicitThis": true, // ‚Üê `this` debe tener tipo expl√≠cito
    "alwaysStrict": true, // ‚Üê 'use strict' en todos los archivos
    // üö® REGLAS EXTRA ANTI-ANY
    "noUncheckedIndexedAccess": true, // ‚Üê Arrays/objetos m√°s seguros
    "noImplicitReturns": true, // ‚Üê Todas las ramas deben retornar
    "noFallthroughCasesInSwitch": true, // ‚Üê Switch cases completos
    "noUnusedLocals": true, // ‚Üê Variables sin usar = error
    "noUnusedParameters": true, // ‚Üê Par√°metros sin usar = error
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/generated/*": [
        "./generated/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}